                        <td class="tdTelephone">{{ contact.telephone }}</td>
                        <td class="tdEmail">{{ contact.email }}</td>
                        <td class="tdAction">
                            <form action="contact" method="post">
                                <input type="hidden" name="id" value="{{ contact.id }}">
                                <input class="btn btn-danger" name="contactDelete" value="Supprimer" type="submit">
                            </form>
                        </td>
                    </tr>
                {% endfor %}
            </table>
        {#</div>#}
    </div>


{% endblock %}

