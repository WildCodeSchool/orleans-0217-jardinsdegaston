
{% extends 'layout.twig' %}


{% block headtitle %}
    <title>Livre d'Or - Admin - Les Jardins de Gaston</title>
{% endblock %}


{% block pagetitle %}
    <h1>Gestion du Livre d'Or</h1>
{% endblock %}


{% block content %}
    {% do form.prepare() %}
    {#{{ dump () }}#}



    <div class="row FormLdor col-xs-12">

        <div class="col-lg-8 col-lg-offset-2 form">
            <form name="LivredorForm" method="POST" action="index.php?p=livredor">

                <div class="form-group">
                    <label for="{{ form.get('NomLDor').name }}">{{ form.get('NomLDor').label }}</label>
                    <input required ="required" class="form-control" value="{{ value.nom }}" type="text" id="{{ form.get('NomLDor').name }}" name="{{ form.get('NomLDor').name }}" />
                </div>

                <div class="form-group">
                    <label for="{{ form.get('TexteLDor').name }}">{{ form.get('TexteLDor').label }}</label>
                    <textarea required ="required" class="form-control" id="{{ form.get('TexteLDor').name }}" name="{{ form.get('TexteLDor').name }}">{{ value.contenu }}</textarea>
                </div>

                <input class="btn btn-success" type="submit" name="addLdor" value="Envoyer">
                <input type="hidden" name="method" value="addLdor">
                <input type="hidden" name="id" value="{{ value.id }}">
                <input type="hidden" name="csrf" value="{{ form.get('csrf').value }}">
            </form>
        </div>

    </div>

    <div class="row titre">
        <div class="col-xs-12 text-center">
            <h1>Afficher les commentaires du Livre d'Or</h1>
        </div>
    </div>

    <div class="row ThumbLdor">
        <div class="col-lg-10 col-lg-offset-2">

            {% for Livredor in content %}
                    <div class="col-lg-4 thumbnail text-center">
                    <h3>{{ Livredor.contenu }}</h3>
                    <p>{{ Livredor.nom }}</p>
                        <form action="index.php?p=livredor" method="post">
                        <input type="hidden" name="id" value="{{ Livredor.id }}">
                        <input type="hidden" name="method" value="updateLdor">
                        <input class="btn btn-warning" type="submit" name="updateLdor" value="Modifier">
                        </form>
                        <form action="index.php?p=livredor" method="post">
                            <input type="hidden" name="id" value="{{ Livredor.id }}">
                            <input type="hidden" name="method" value="deleteLdor">
                            <input class="btn btn-danger" type="submit" name="deleteLdor" value="Supprimer">
                        </form>
                    </div>
            {% endfor %}
        </div>

    </div>


{% endblock %}




