{# src/view/site/accueil.twig #}

{% extends 'layout.twig' %}


{% block headtitle %}
    <title>Les Jardins de Gaston</title>
{% endblock %}

{% block content %}

    <!--------    Image header    --------->
    <div class="row">

        <div class="col-lg-12 bg-img1-lg visible-lg img-responsive parallax"></div>
        <div class="col-lg-12 bg-img1-md visible-md visible-sm img-responsive parallax"></div>
        <div class="col-lg-12 bg-img1-xs visible-xs img-responsive"></div>
        <h4 id="accroche">Jardinier par nature ...</h4>
    </div>


    <!-------    Section presentation  -------->


    <!-------       Titre       -------->


    <!-------    Paragraphe presentation  -------->
    <span id="presentationAnchor" class="ancre"></span>

    <!--------  Version Desktop  ----------------->
    <div class="row presentation-float">
        <div class="col-xs-offset-1 col-xs-10 text-center">

            <div class="presentation-header-float">
                <h1>Les Jardins de Gaston<br/><span class="sous-titre">Entretien des parcs et jardins dans la région Orléannaise</span>
                </h1>
                <h2>{{ presentationH1.titre }}</h2>
                <p>{{ presentationH1.contenu | nl2br }}</p>
            </div>

            <div class="value1-float">
                <h3>{{ presentationv1.titre }}</h3>
                <p>{{ presentationv1.contenu | nl2br }}</p>
            </div>

            <div class="value2-float">
                <h3>{{ presentationv2.titre }}</h3>
                <p>{{ presentationv2.contenu | nl2br }}</p>
            </div>

        </div>
    </div>

    <!--------  Version Mobile  ----------------->
    <div class="row presentation">
        <div class="col-xs-offset-1 col-xs-10 text-center">

            <div class="row presentation-header">
                <h1>Les Jardins de Gaston<br/><span class="sous-titre">Entretien des parcs et jardins dans la région Orléannaise</span>
                </h1>
                <h2>{{ presentationH1.titre }}</h2>
                <p>{{ presentationH1.contenu | nl2br }}</p>
            </div>

            <div class="row">
                <div class="col-xs-offset-1 col-xs-10 col-md-offset-2 col-md-8 value1">
                    <h3>{{ presentationv1.titre }}</h3>
                    <p>{{ presentationv1.contenu | nl2br }}</p>
                </div>
            </div>

            <div class="row">
                <div class="col-xs-offset-1 col-xs-10 col-md-offset-2 col-md-8 value2">
                    <h3>{{ presentationv2.titre }}</h3>
                    <p>{{ presentationv2.contenu | nl2br }}</p>
                </div>
            </div>

        </div>
    </div>


    <!-------     Valeur Ecologie  -------->


    <!-------      Valeur Client     -------->


    <!-------      Image Transition 1     -------->
    <div class="row">
        <div class="col-lg-12 bg-img2-lg img-responsive visible-lg parallax"></div>
        <div class="col-lg-12 bg-img2-md visible-md visible-sm hidden-xs img-responsive parallax"></div>
    </div>


    <!-------     Section Best Realisations    -------->

    <div class="row real-titre">
        <div class="col-xs-12">
            <h2>Nos réalisations</h2>
        </div>
    </div>

    <div class="row presta">
        <hr class="separe">
    </div>


    <div class="row">
        <div class="col-xs-12 realBloc">
            <div id="carousel-real" class="carousel slide fade in realClass" data-ride="carousel" data-interval="false">

                <div class="carousel-inner" role="listbox">
                    {% for rea in realisation %}
                        <div class="item row real {% if loop.index == 1 %}active{% endif %}">
                            <div class="col-xs-offset-1 col-xs-10 col-lg-offset-1 col-lg-4">
                                <div class="side-real">
                                    <h3>{{ rea.titre }}</h3>
                                    <p>{{ rea.contenu }}</p>
                                </div>
                            </div>

                            <div class="col-xs-offset-1 col-xs-10 col-lg-5 blocCompare">
                                <div id="comparison{{ loop.index }}">
                                    <figure>
                                        <div id="divisor{{ loop.index }}"></div>
                                    </figure>
                                    <input type="range" min="0" max="100" value="40" class="realSlide{{ loop.index }}"
                                           id="slider{{ loop.index }}" oninput="moveDivisor{{ loop.index }}()">
                                </div>
                                <div class="caption">
                                    <i>Cliquez sur le carré vert et faites le glisser de gauche à droite.</i>
                                </div>
                            </div>
                        </div>
                    {% endfor %}
                </div>

                <a class="left carousel-control" href="#carousel-real" role="button" data-slide="prev">
                    <span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>
                </a>
                <a class="right carousel-control" href="#carousel-real" role="button" data-slide="next">
                    <span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>
                </a>
            </div>

        </div>

    </div>


    <!--    Section Blog    -->

    <div class="row Blog">


    {% if chezgaston == 1 %}
    <div class="col-xs-offset-1 col-xs-10 col-md-offset-7 col-md-5">
        <div class="BlogThumb">
            <a href="journal"><h3>Et pendant ce temps-là chez Gaston...</h3></a>
            <p>Découvrez le journal de Gaston : des photos, des conseils et des astuces pour l'entretien de votre jardin</p>
            <a type="button" class="btn btn-default hover" href="journal">J'y vais</a>
        </div>
    </div>
    {% endif %}

    </div>


    <!-------      Section Liste Prestations     -------->
    <span id="prestationAnchor" class="ancre"></span>
    <div class="row presta-titre">

        <div class="col-xs-12">
            <h2>Nos prestations</h2>
        </div>
    </div>
    <div class="row presta">
        <hr class="separe">
    </div>


    <!-------        Prestation        -------->

    <div class="row">
        {% for presta in prestation %}
            <div class="col-xs-offset-1 col-xs-10 col-sm-offset-2 col-sm-8 col-md-offset-1 col-md-4 col-lg-offset-1 col-lg-4">
                <div class="thumbnail blocPresta">
                    <img src="img/imgP-{{ presta.id }}.jpg"/>
                    <div class="etiquette">
                        <h3>{{ presta.titre }}</h3>
                        <p>{{ presta.contenu }}</p>
                    </div>
                </div>
            </div>
        {% endfor %}
    </div>

    <!-------     Section Conseil du moment     -------->
    <span id="conseilAnchor" class="ancre"></span>
    <div class="row Conseilbackground-lg">
        <div class="col-sm-8 col-sm-offset-2">
            <div class=" row Conseil">
                <div class="col-sm-3 col-sm-offset-1 ConseilTitre">
                    <h4>CONSEIL DU MOMENT</h4>
                </div>
                <div class="ConseilText col-sm-6 col-sm-offset-1">
                    <p>{{ conseil.contenu }}</p>
                </div>
            </div>
        </div>
    </div>
    <div class="row Conseilbackground-xs">
        <div class="col-xs-10 col-xs-offset-1 Conseil-xs">
            <div class="row">
                <div class="col-xs-8 col-xs-offset-2 ConseilTitre-xs">
                    <h4>Conseil du moment</h4>
                </div>
            </div>
            <div class="row">
                <div class="ConseilText-xs col-xs-10 col-xs-offset-1">
                    <p>{{ conseil.contenu }}</p>
                </div>
            </div>
        </div>
    </div>


    <!-------       Section Livre d'or      -------->
    <div class="row">
        <div class="col-xs-10 col-xs-offset-1 LDOR">
            <div class="row">
                <div class="LivreDor-titre">
                    <h2>Notre livre d'Or</h2>
                </div>
            </div>
            <div class="row">
                <hr class="separe">
            </div>

            <div class="row">
                <div id="carousel-livredor" class="carousel slide fade in" data-ride="carousel" data-interval="false">

                    <div class="carousel-inner" role="listbox">
                        {% for message in livredor %}
                            <div class="item col-xs-8 col-xs-offset-2 {% if loop.index == 1 %}active{% endif %}">
                                <div class="caption">
                                    <h3>{{ message.contenu }}</h3>
                                    <p>{{ message.auteur }}</p>
                                </div>
                            </div>
                        {% endfor %}
                    </div>

                    <a class="left carousel-control" href="#carousel-livredor" role="button" data-slide="prev">
                        <span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>
                    </a>
                    <a class="right carousel-control" href="#carousel-livredor" role="button" data-slide="next">
                        <span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>
                    </a>
                </div>
            </div>
        </div>
    </div>

    <!-------     Section Formulaire     -------->
    <div class="row">
        <div class="Contact col-xs-12">
            <!-- <img class=" ImgForm col-lg-6 col-lg-offset-0" src="http://placehold.it/600x500"> -->
            <img class=" ImgForm col-lg-6 col-lg-offset-0" src="img/jardinage.jpg">

            <div class="col-xs-12 col-sm-8 col-sm-offset-2 col-lg-6 col-lg-offset-0 formulaire">

                <span id="formulaireAnchor" class="ancre"></span>
                {% do contact.prepare() %}
                <h2>CONTACTEZ-NOUS</h2>
                <hr class="separe">
                <p>Tel: 06 76 27 40 31</p>

                <p>Pour toute demande de devis, de conseil ou autre, vous pouvez nous joindre par téléphone ou via le formulaire ci-joint</p>
                <form name="ajout-contact" method="POST" action="accueil#formulaireAnchor">



                    <div class="form-group">
                        <label for="{{ contact.get('NomContact').name }}">{{ contact.get('NomContact').label }}</label>
                        <input required="required" class="form-control" type="text"
                               name="{{ contact.get('NomContact').name }}"/>
                        {% for message in nomErr %}
                            <p class="erreur">{{ message }}</p>
                        {% endfor %}
                    </div>

                    <div class="form-group">
                        <label for="{{ contact.get('PrenomContact').name }}">{{ contact.get('PrenomContact').label }}</label>
                        <input required="required" class="form-control" type="text"
                               name="{{ contact.get('PrenomContact').name }}"/>
                        {% for message in prenomErr %}
                            <p class="erreur">{{ message }}</p>
                        {% endfor %}
                    </div>

                    <div class="form-group">
                        <label for="{{ contact.get('EmailContact').name }}">{{ contact.get('EmailContact').label }}</label>
                        <input class="form-control" type="email" name="{{ contact.get('EmailContact').name }}"/>
                        {% for message in emailErr %}
                            <p class="erreur">{{ message }}</p>
                        {% endfor %}
                    </div>

                    <div class="form-group">
                        <label for="{{ contact.get('TelContact').name }}">{{ contact.get('TelContact').label }}</label>
                        <input class="form-control" type="text" name="{{ contact.get('TelContact').name }}"/>
                        {% for message in telErr %}
                            <p class="erreur">{{ message }}</p>
                        {% endfor %}
                    </div>

                    <div class="form-group">
                        <label for="{{ contact.get('TexteContact').name }}">{{ contact.get('TexteContact').label }}</label>
                        <textarea required="required" class="form-control"
                                  name="{{ contact.get('TexteContact').name }}"></textarea>
                        {% for message in contenuErr %}
                            <p class="erreur">{{ message }}</p>
                        {% endfor %}
                    </div>

                    <input class="btn btn-default hover" type="submit" name="add" value="Envoyer">
                    <input type="hidden" name="csrf" value="{{ contact.get('csrf').value }}">
                    <div>{% if ok is not empty %}<p class="ok">Message envoyé !</p>{% endif %}</div>

                </form>

            </div>

        </div>
    </div>

{% endblock %}

